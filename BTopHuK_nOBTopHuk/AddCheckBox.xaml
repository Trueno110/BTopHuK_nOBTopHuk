        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTopHuK_nOBTopHuk"
        mc:Ignorable="d"
        Title="AddCheckBox" Height="250" Width="350">
    <Grid Background="Black">
        <TextBlock TextAlignment="Center" VerticalAlignment="Top" Text="Введите название задачи" Name="Geniy" FontSize="20" Foreground="Red" Margin="0,43,0,0"/>
        <TextBox Grid.Row="1" Grid.ColumnSpan="3" Height="45" Width="300" Background="Black" BorderBrush="Red" Foreground="Red" TextAlignment="Center" FontSize="20" Name="Totot" />
        <Button Content="Создать Задачу" x:Name="CreateZad" Width="300" Height="40" BorderBrush="Black" VerticalAlignment="Bottom" HorizontalAlignment="Center" Background="Black" Foreground="red" Click="CreateZad_Click" Margin="25" />

    </Grid>
</Window>
